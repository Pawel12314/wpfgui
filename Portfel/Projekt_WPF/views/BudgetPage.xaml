<Page x:Class="Projekt_WPF.views.BudgetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projekt_WPF.views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BudgetPage"
      Loaded="Page_Loaded"
      >

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                
            </Grid.ColumnDefinitions>
            <TextBlock Background="Yellow">sample</TextBlock>
            <Grid Grid.Column="1">
                <DockPanel LastChildFill="True">
                    <ListBox DockPanel.Dock="Top" Name="definedWishesListBox" MinHeight="200">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding name}"></TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Button Style="{StaticResource Button}" Name="addWishButton" Click="addWishButton_Click">dodaj życzenie</Button>
                        <Button Style="{StaticResource Button}">edytujżyczenie</Button>
                        <Button Style="{StaticResource deleteButton}">usuńżyczenie</Button>
                        
                    </StackPanel>
                </DockPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
